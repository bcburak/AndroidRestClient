<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.burakcelik.restclientapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token"
        android:id="@+id/txtViewToken"
        android:layout_below="@+id/etxtBranchCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonGetToken"
        android:layout_alignRight="@+id/etxtBranchCode"
        android:layout_alignEnd="@+id/etxtBranchCode"/>


    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Giriş"
        android:id="@+id/buttonGetToken"
        android:onClick="sendPostRequest"
        android:textColor="#d72424"
        android:background="#282323"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/etxtIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="IP"
        android:inputType="text"
        android:text="172.16.20.136:7070"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/etxtCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Şirket"
        android:inputType="text"
        android:layout_below="@+id/etxtIP"
        android:layout_alignLeft="@+id/etxtIP"
        android:layout_alignStart="@+id/etxtIP"
        android:text="TEST"/>
    <EditText
        android:id="@+id/etxtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        android:layout_below="@+id/etxtCompany"
        android:layout_alignLeft="@+id/etxtCompany"
        android:layout_alignStart="@+id/etxtCompany"
        android:text="netsis"/>

    <EditText
        android:id="@+id/etxtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:layout_below="@+id/etxtUser"
        android:layout_alignLeft="@+id/etxtUser"
        android:layout_alignStart="@+id/etxtUser"
        android:text="Clk2016@"/>
    <EditText
        android:id="@+id/etxtDbUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="DB Kullanıcı"
        android:inputType="text"
        android:layout_below="@+id/etxtPassword"
        android:layout_alignLeft="@+id/etxtPassword"
        android:layout_alignStart="@+id/etxtPassword"
        android:text="sa"/>

    <EditText
        android:id="@+id/etxtDbPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="DB Şifre"
        android:inputType="textPassword"
        android:layout_below="@+id/etxtDbUser"
        android:layout_alignLeft="@+id/etxtDbUser"
        android:layout_alignStart="@+id/etxtDbUser"
        android:text="sapass"/>

    <EditText
        android:id="@+id/etxtBranchCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Şube Kodu"
        android:inputType="text"
        android:text="0"
        android:layout_below="@+id/etxtDbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
